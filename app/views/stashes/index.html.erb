<div class="container">
  <h3> my stash </h3>
  <% if @error %>
      <p><%= @error %></p>
  <% else %>

    <% @stash_photos.each do |photo| %>
      <div id="polaroid">
        <div class="flippable">

          <figure class="front">
            <img class="photo" src="<%= photo.image_url %>" alt="user_photo" />
          </figure>

          <figure class="back">
            <%= render partial: "photos/info", locals: {photo: photo} %>
            <br />

            <button type="button" class="btn btn-danger"><%= link_to 'Remove from Stash', photo_stash_path(photo), method: :delete %></button>
          </figure>
        </div>
      </div>
    <% end %>
  <% end %>

</div>
