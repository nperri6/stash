<!DOCTYPE html>
<html>
<head>
  <title>stash</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js"></script>
</head>
<body>


<nav class="navbar navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href= "<%= user_stashes_path(current_user) %>">stash</a>
    </div>
    <div>
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to image_tag("home.png"), root_path, class: "home btn btn-primary btn-md" %></li>
      <% if current_user %>

        <li class="#"><%= link_to image_tag("search.png"), foodtags_path, class: "search" %></li>
        <li class="#"><%= link_to image_tag("camera.png"), class: "camera" %></li>
        <li class="#"><%= link_to image_tag("dining-set.png"), user_stashes_path(current_user), class: "my_stash" %></li>
        <li class="#"><%= link_to image_tag("user.png"), user_path(current_user), class: "my_profile", id: "current_user.stash.id" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
      </ul>
      <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Sign In with Facebook', "/auth/facebook", id: "sign_in" %></li>
      </ul>
      <% end %>

</nav>

<%= yield %>

</body>
</html>
