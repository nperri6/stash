<div class="container">
    <h3> my photos </h3>
   <% if @error %>
      <p><%= @error %></p>

  <% else %>
    <% @user_photos.each do |photo|%>

      <div id="polaroid">
        <div class="flippable">

          <figure class="front">
            <img class="photo" src="<%= photo.image_url %>" alt="user_photo" />
          </figure>

          <figure class="back", id="back">
            <%= render partial: "photos/info", locals: {photo: photo} %>

            <button type="button" class="btn btn-warning" ><%= link_to 'Edit', edit_photo_path(photo) %></button>
            <button type="button" class="btn btn-danger" class="edits"><%= link_to 'Delete', photo_path(photo), method: :delete %></button>
          </figure>
        </div>
      </div>

    <% end %>
  <% end %>



</div>
